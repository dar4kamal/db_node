extends layout

block content
  .container
    .row.row-offcanvas.row-offcanvas-right
      .col-12.col-md-9
        .container.marketing
          // Three columns of text below the carousel
          .row
            - for (var i = 0; i < books.length; i++)
              .col-lg-4
                img(src='images/' + books[i].cover, alt=books[i].title, width='176', height='233')
                h3.book-title #{books[i].title}
                p.book-author
                  span.text-small By:
                  | #{books[i].author}
                p
                  a.btn.btn-secondary.btn-sm(href='#', role='button', data-toggle="modal", data-target="#book_det_modal" + i) Details »
                  a.btn.btn-primary.btn-sm(href='#', role='button')
                    | Borrow
                    i.fa.fa-plus-square-o.right(aria-hidden='true')
              // The Modal
              div(id="book_det_modal" + i, class="modal fade")
                .modal-dialog
                  .modal-content
                    // Modal Header
                    .modal-header
                      h4.modal-title Book information
                      button.close(type='button', data-dismiss='modal') ×
                    // Modal body
                    .modal-body
                      .row
                        .col-5.bold
                          p Title
                          p Author
                          p Cover image
                          p No of pages
                          p Category
                          p ISBN
                          p Publish year
                          p Edition
                          p Description
                          p Available
                          p Borrowers
                          p Publisher
                        .col-7
                          p #{books[i].title}
                          p
                            | #{books[i].author}
                            a.btn.btn-link.btn-sm(href='#', role='button')
                              i.fa.fa-external-link(aria-hidden='true')
                          p
                            a.link #{books[i].cover}
                          p #{books[i].pages_no}
                          p #{books[i].category}
                          p #{books[i].isbn}
                          p #{books[i].publish_year}
                          p #{books[i].edition}
                          p
                            | #{books[i].description}
                          p #{books[i].available}
                          p
                            | #{books[i].borrowers}
                            a.btn.btn-link.btn-sm(href='#', role='button')
                              i.fa.fa-external-link(aria-hidden='true')
                          p
                            | #{books[i].publisher}
                            a.btn.btn-link.btn-sm(href='#', role='button')
                              i.fa.fa-external-link(aria-hidden='true')
                    // Modal footer
                    .modal-footer
                      button.btn.btn-secondary(type='button', data-dismiss='modal') Close
              // /.col-lg-4
          // /.row
      // /span
      include sidebar
    include footer
      // /span
    // /row
  // /.container
